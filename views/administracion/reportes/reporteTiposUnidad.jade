  body


    #encabezado
      

    #main-container
      label(class="lblNameGrupo" ) GRUPO DOMINOS
      br
      br
      label() _____________________________________________________________________________________________________________________________________________________________________

      br
      
      label(class="lblTitulo" ) Tipos de Unidades en el Sistema

      br

      table
        thead      
          tr
            th Id
            th Nombre        
            th Status
          
        tbody        
        each tu in listaTipoUnidad      
          tr
            td= tu.IdTipoUnidad  
            td= tu.nombreTipo 
            if tu.status == true         
              td Activo     
            else
              td Inactivo
            
