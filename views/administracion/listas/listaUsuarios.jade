    .capa
    // -------------
    input#btn-menu(type='checkbox')
    .container-menu
      .cont-menu
        nav
          a
            form(action="verListaEmpresas"  method='POST')
              input(type='hidden' value= usuario.IdUsuario  name="IdUsuario")
              button(type="submit" class="btnMenu") Empresas
          a 
            form(action="verListaFranquicias"  method='POST')
              input(type='hidden' value= usuario.IdUsuario   name="IdUsuario")
              button(type="submit" class="btnMenu") Franquicias
          a 
            form(action="verListaTipoUnidad"  method='POST')
              input(type='hidden' value= usuario.IdUsuario   name="IdUsuario")
              button(type="submit" class="btnMenu") Tipos de Unidades
          a 
            form(action="verListaCentrosCosto"  method='POST')
              input(type='hidden' value= usuario.IdUsuario   name="IdUsuario") 
              button(type="submit" class="btnMenu") Centros de Costo
          a 
              form(action="verListaContacto"  method='POST')
                input(type='hidden' value= usuario.IdUsuario   name="IdUsuario") 
                button(type="submit" class="btnMenu") Contactos
          if usuario.tipoUsuario == 1          
            a 
              form(action="verListaUsuarios"  method='POST')
                input(type='hidden' value= usuario.IdUsuario   name="IdUsuario") 
                button(type="submit" class="btnMenu") Usuarios
  
        label(for='btn-menu') ✖️  

    #main-container
      label(class="lblListaUnidades" ) Lista de usuarios
      br
      br
      form.col-12(action="reporteUsuarios"  method='POST' name="Id")
        input(type='hidden' value= usuario.IdUsuario   name="IdUsuario")
        button(type="submit" class="btnReporte" ) Generar reporte
      if usuario.tipoUsuario == 1 
        form.col-12(action="nuevoUsuario"  method='POST' name="Id")
          input(type='hidden' value= usuario.IdUsuario   name="IdUsuario")
          button(type="submit" class="bntNuevoLista" ) Agregar Usuario
      br
      br
      table
        thead(class="p")
          
          tr
            //th Id
            th Nombre        
            th Telefono
            th Mail
            th Tipo
            th Status
            th Accion

                  
        tbody        
        each lu in listaUsuarios      
          tr
            //td= lu.IdUsuario
            td= lu.nombreCompleto           
            td= lu.telefono
            td= lu.mail
            if lu.tipoUsuario == 1
              td Administrador             
            if lu.tipoUsuario == 2 
              td Supervisor
            if lu.tipoUsuario == 3 
              td Lector             
            if lu.status == true
              td Activo
            else  
              td Inactivo               
            td
              form.col-12(action="verUsuario"  method='POST')
                input(type='hidden' value= lu.IdUsuario   name="IdUsuarioLista")
                input(type='hidden' value= usuario.IdUsuario   name="IdUsuario")
                button(type="submit" class="btnVerUnidad" ) Ver usuario      

          

