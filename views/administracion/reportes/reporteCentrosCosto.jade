doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    title Reporte Centros de Costo
    link(rel='stylesheet' href='/stylesheets/reportes/reportes.css')
  body


    #encabezado
      

    #main-container
      label(class="lblNameGrupo" ) GRUPO DOMINOS
      br
      br
      label() _____________________________________________________________________________________________________________________________________________________________________

      br
      
      label(class="lblTitulo" ) Centros de Costo en el Sistema

      br

      table
        //caption Statement Summary
        thead
          tr
            th UDN
            th Nombre
            th Empresa
            th Franquicia
            th Tipo unidad
            th Status
            th Gerente 
            th Sub Gerente 
            th Telefono 
            th(class="mailGerente") Email Gerente
            th(class="calle")  Calle
            th Numero Interior 
            th Numero Exteriro 
            th Colonia 
            th Ciudad 
            th Estado 
            th Codigo Postal

        tbody
        each cc in centroCosto
          tr
            td= cc.UDN   
            td= cc.nombreCentroCosto
            td= cc.nombreEmpresa
            td= cc.nombreFranquicia
            td= cc.nombreTipo
            if cc.status == true
              td Activo 
            else  
              td Inactivo
            td= cc.nombreGerente
            td= cc.nombresubGerente
            td= cc.telefono
            td= cc.mailGerente
            td= cc.direccion
            td= cc.numeroInterior
            td= cc.numeroExterior
            td= cc.colonia
            td= cc.ciudad
            td= cc.estado
            td= cc.CP
  


      .containerFecha
        br
        br
        label(class="lblElaboradousuario") Usuario: #{usuario.nombreCompleto}
        
              
        laber(class="lblElaboradoFecha") Fecha y Hora de impresion: #{fecha} #{hora} hrs
        br  
        br
        br    